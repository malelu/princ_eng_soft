filename = "words.txt"
fp = io.open( filename, "r" )
lineno = 3
local n=0
for l in io.lines(filename) do
   n=n+1
   if n==lineno then print(l); break end
end


function pick_word(filename, line_number)
   local cont=0
   for line in io.lines(filename) do
      cont=cont+1
      if cont==line_number then 
         return line;
      end
   end
end



